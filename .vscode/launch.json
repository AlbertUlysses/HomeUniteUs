	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": [
				"<node_internals>/**"
			],
			"cwd": "${workspaceFolder}/app",
			"program": "${workspaceFolder}/app/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
			"args": ["--mode", "development", "--open", "--hot", "--config", "webpack-local.config.js"],
		}
	]
}